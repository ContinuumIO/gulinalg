                        /* Rank 1 update */

typedef struct ger_params_struct
{
    void *A;
    fortran_int LDA;
    fortran_int M;
    fortran_int N;
} GER_PARAMS_t;

static inline int
init_ger_params(GER_PARAMS_t *params,
                fortran_int m,
                fortran_int n,
                npy_intp* steps,
                size_t sot)
{
    npy_uint8 *mem_buff = malloc(m * n * sot);
    if (!mem_buff) {
        memset(params, 0, sizeof(*params));
        return 0;
    }

    params->A = mem_buff;
    params->LDA = m;
    params->M = m;
    params->N = n;

    return 1;
}

static inline void
release_ger_params(GER_PARAMS_t * params)
{
    free(params->A);
    params->A = NULL;
}

/**begin repeat
   #TYPE=FLOAT,DOUBLE,CFLOAT,CDOUBLE#
   #typ=npy_float,npy_double,npy_cfloat,npy_cdouble#
   #one=s_one,d_one,c_one.array,z_one.array#
   #zero=s_zero,d_zero,c_zero.array,z_zero.array#
   #GER=sger,dger,cgeru,zgeru#
   #GERC=sger,dger,cgerc,zgerc#
*/

static void
@TYPE@_update_rank1_common(int conjugate,
                           char **args,
                           npy_intp *dimensions,
                           npy_intp *steps)
{
    /*
     * For complex numbers, if conjugate is true, invoke _gerc function
     * which uses conjugate transpose of second argument. Otherwise invoke
     * _geru which does normal transpose.
     */
    GER_PARAMS_t params;
    fortran_int m, n;

    INIT_OUTER_LOOP_4

    m = (fortran_int) dimensions[0];
    n = (fortran_int) dimensions[1];
    if (m == 0 || n == 0)
        return; /* output array will be empty, as one of its inner dimensions will be 0 */

    size_t sot = sizeof(@typ@);

    if (init_ger_params(&params, m, n, steps, sot))
    {
        LINEARIZE_DATA_t a_in, r_out;
        init_linearize_data(&a_in, n, m, steps[3], steps[2]);
        init_linearize_data(&r_out, n, m, steps[5], steps[4]);

        BEGIN_OUTER_LOOP_4
            linearize_@TYPE@_matrix(params.A, args[2], &a_in);

            /*
             * If size of a vector is 1 (or matrix is 1x1), gufunc won't
             * step along that dimension. The stride will be 0 for that
             * dimension.
             * Refer: https://docs.scipy.org/doc/numpy-1.15.1/reference/ufuncs.html#broadcasting
             * GER expects positive incx and incy, so set that to 1.
             */
            fortran_int incx = steps[0] != 0 ? steps[0] / sot : 1;
            fortran_int incy = steps[1] != 0 ? steps[1] / sot : 1;

            /*
             * To get rank1 update, invoke ger_ for real numbers and _gerc/_geru
             * for complex numbers. Signature of rank1 update is
             * (M, N) x (N, 1) -> (M, 1)
             */
            if (conjugate) {
                FNAME(@GERC@)(&params.M, &params.N,
                             (void*)&@one@, // alpha
                             (void*)args[0], &incx,
                             (void*)args[1], &incy,
                             params.A, &params.LDA);
            }
            else {
                FNAME(@GER@)(&params.M, &params.N,
                             (void*)&@one@, // alpha
                             (void*)args[0], &incx,
                             (void*)args[1], &incy,
                             params.A, &params.LDA);
            }

            /* Copy Fortran matrix returned by GER to output argument */
            delinearize_@TYPE@_matrix(args[3], params.A, &r_out);
        END_OUTER_LOOP

        release_ger_params(&params);
    }
}

static void
@TYPE@_update_rank1_conjugate(char     **args, npy_intp *dimensions,
                              npy_intp *steps, void *NPY_UNUSED(func))
{
    @TYPE@_update_rank1_common(1, args, dimensions, steps);
}

static void
@TYPE@_update_rank1(char     **args, npy_intp *dimensions,
                    npy_intp *steps, void *NPY_UNUSED(func))
{
    @TYPE@_update_rank1_common(0, args, dimensions, steps);
}

/**end repeat**/


