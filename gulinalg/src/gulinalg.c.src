} TRTRI_PARAMS_t;

/**begin repeat
   #TYPE=FLOAT,DOUBLE,CFLOAT,CDOUBLE#
   #ftyp=float,double,COMPLEX_t,DOUBLECOMPLEX_t#
   #lapack_func=strtri,dtrtri,ctrtri,ztrtri#
 */
static inline int init_@lapack_func@(TRTRI_PARAMS_t *params,
                                     fortran_int N)
{
    npy_uint8 *mem_buff = malloc(N*N*sizeof(@ftyp@));
    if (!mem_buff) {
        free(mem_buff);
        memset(params, 0, sizeof(*params));
        return 0;
    }

    params->A = (void*)mem_buff;
    params->N = N;
    params->LDA = N;

    return 1;
}

static inline void release_@lapack_func@(TRTRI_PARAMS_t *params)
{
    free(params->A);
    memset(params, 0, sizeof(*params));
    return;
}

static inline void @TYPE@_inv_triangular(char uplo,
                                         char diag,
                                         char **args,
                                         npy_intp *dimensions,
                                         npy_intp *steps)
{
    TRTRI_PARAMS_t params;
    int error_occurred = get_fp_invalid_and_clear();
    fortran_int n;
    INIT_OUTER_LOOP_2

    n = (fortran_int)dimensions[0];
    /* output array will be empty, as one of its inner dimensions will be 0 */
    if (n == 0) {
        return;
    }

    if (init_@lapack_func@(&params, n)) {
        LINEARIZE_DATA_t a_in, r_out;

        init_linearize_data(&a_in, n, n, steps[1], steps[0]);
        init_linearize_data(&r_out, n, n, steps[3], steps[2]);

        BEGIN_OUTER_LOOP_2
            fortran_int info;
            // gufunc shouldn't modify argument in-place, so get a copy.
            linearize_@TYPE@_matrix(params.A, args[0], &a_in);
            // Invoke LAPACK function trtri to get inverse.
            LAPACK(@lapack_func@)(&uplo, &diag, &params.N,
                                  params.A, &params.LDA, &info);
            if (!info) {
                // make_symmetric_@TYPE@_matrix(params.UPLO, params.N, params.A);
                delinearize_@TYPE@_matrix(args[1], params.A, &r_out);
            } else {
                error_occurred = 1;
                nan_@TYPE@_matrix(args[1], &r_out);
            }
        END_OUTER_LOOP

        release_@lapack_func@(&params);
    }

    set_fp_invalid_or_clear(error_occurred);
}

