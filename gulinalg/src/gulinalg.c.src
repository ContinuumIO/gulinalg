                       /* LU decomposition */

typedef struct getrf_params_struct
{
    void *A;
    fortran_int *IPIV;
    fortran_int M;
    fortran_int N;
    fortran_int LDA;
} GETRF_PARAMS_t;

static inline int
init_getrf_func(GETRF_PARAMS_t *params, fortran_int M, fortran_int N,
                 npy_intp *steps, size_t sot)
{
    const size_t a_size = M * N * sot;
    fortran_int min_m_n = M < N ? M:N;
    const size_t ipiv_size = min_m_n * sizeof(fortran_int);
    npy_uint8 *mem_buff = malloc(a_size + ipiv_size);

    if (mem_buff == NULL) {
        free(mem_buff);
        memset(params, 0, sizeof(*params));
        return 0;
    }

    params->A = mem_buff;
    params->IPIV = (fortran_int *)(mem_buff + a_size);
    params->M = M;
    params->N = N;
    params->LDA = M;

    return 1;
}

static inline void
release_getrf_func(GETRF_PARAMS_t *params)
{
    free(params->A); /* this points to the whole block */
    memset(params, 0, sizeof(*params));
}

/**begin repeat
   #TYPE=FLOAT,DOUBLE,CFLOAT,CDOUBLE#
   #ftyp=fortran_real, fortran_doublereal,
         fortran_complex, fortran_doublecomplex#
   #lapack_func=sgetrf,dgetrf,cgetrf,zgetrf#
   #cblas_type=s,d,c,z#
   #laswp=slaswp,dlaswp,claswp,zlaswp#
*/

static void
@TYPE@_lu_common(int permute, char **args, npy_intp *dimensions, npy_intp *steps)
{
    /*
     * If permute is False(0), decompose matrix into Permutation matrix,
     * lower triangular and upper triangular matrix i.e. A = P * L * U.
     * Otherwise, permute L matrix using IPIV and return permuted L and U
     * i.e. A = L * U.
     */
    GETRF_PARAMS_t params;
    int error_occurred = get_fp_invalid_and_clear();

   /*
    * Variables to store non-core dimensions in a gufunc. It's easier to
    * explain using example. Say input is an array A of shape (10, M, N).
    * 10 is non-core dimension and MxN is the core dimension of the matrix
    * to be decomposed in this method. outer_dim is non-core dimension i.e.
    *    outer_dim = 10
    * outer_steps are strides for the input and outputs i.e. if above array
    * is decomposed to matrices L and U of shapes (10, M, N) and U (10, N, N)
    * respectively, for double data type matrix outer steps are:
    *   outer_step[0] = 10 * M * N * 8 (belongs to A)
    *   outer_step[1] = 10 * M * N * 8 (belongs to L)
    *   outer_Step[2] = 10 * N * N * 8 (belongs to U)
    *
    * num_in_out_params is the total number of input and outputs e.g.
    * it's 4 if A decomposes to P, L and U, and 3 if decomposes to L and U.
    */
    size_t outer_dim = *dimensions++;
    ptrdiff_t outer_steps[4];
    size_t num_in_out_params  = permute ? 3 : 4;
    size_t i;
    for (i = 0; i < num_in_out_params; ++i) {
        outer_steps[i] = (ptrdiff_t)steps[i];
    }

    /*
     * We got strides for outer or non-core dimensions. Move forward steps
     * to give strides for core dimensions i.e. for matrices in input as well
     * as output.
     */
    steps += num_in_out_params;

    /*
     * Since code above incremented dimensions pointer to get outer dimension,
     * now it points to core dimensions.
     */
    fortran_int m, n;
    m = (fortran_int) dimensions[0];
    n = (fortran_int) dimensions[1];
    /*
     * If m = 0, all output matrices will be empty and no need to
     * zero initialize them.
     */
    if (m == 0) {
        return;
    }

    if (init_getrf_func(&params, m, n, steps, sizeof(@ftyp@)))
    {
        LINEARIZE_DATA_t a_in, p_out, l_out, u_out;
        fortran_int k = m < n ? m : n;
        init_linearize_data(&a_in,  n, m, steps[1], steps[0]);
        if (permute) {
            init_linearize_data(&l_out, k, m, steps[3], steps[2]);
            init_linearize_data(&u_out, n, k, steps[5], steps[4]);
        }
        else {
            init_linearize_data(&p_out, m, m, steps[3], steps[2]);
            init_linearize_data(&l_out, k, m, steps[5], steps[4]);
            init_linearize_data(&u_out, n, k, steps[7], steps[6]);
        }

        /*
         * Repeat core operation i.e. LU decomposition of the matrix
         * for outer/non-core dimension.
         */
        for (i = 0; i < outer_dim; ++i) {
            fortran_int info;
            linearize_@TYPE@_matrix(params.A, args[0], &a_in);
            LAPACK(@lapack_func@)(&params.M, &params.N,
                                  params.A, &params.LDA,
                                  params.IPIV, &info);

            if (!info) {
                /*
                 * Allocate space for upper and lower triangular matrices.
                 * Using calloc as these matrices need to be zero
                 * initialized e.g. upper part of the lower triangular matrix.
                 * calloc does it very fast.
                 */
                void *L = calloc(m * k, sizeof(@ftyp@));
                void *U = calloc(k * n, sizeof(@ftyp@));
                if (L == NULL || U == NULL) {
                    error_occurred = 1;
                    goto error;
                }

                /* Copy lower triangular matrix and set diagonal to 1. */
                int j, l;
                for (j = 0; j < k; j++) {
                    @ftyp@ *element = (@ftyp@ *)L + (m + 1) * j;
                    *element = *(@ftyp@*)&@cblas_type@_one;

                    /* Copy non-diagonal elements. */
                    for (l = j+1; l < m; l++) {
                        element = (@ftyp@ *)L + m * j + l;
                        *element = *((@ftyp@ *)params.A + m * j + l);
                    }
                }

                /* Copy upper triangular matrix. */
                for (j = 0; j < k; j++) {
                    for (l = j; l < n; l++) {
                        @ftyp@ *element = (@ftyp@ *)U + k * l + j;
                        *element = *((@ftyp@ *)params.A + m * l + j);
                    }
                }

                int arg_i = 1;  /* Index to copy calculated values to output */
                fortran_int one = 1;
                fortran_int minus_one = -1;
                if (!permute) {
                    int *permutation_buf = (int*) calloc(m, sizeof(int));
                    if (permutation_buf == NULL) {
                        error_occurred = 1;
                        goto error;
                    }

                    /*
                     * To get permutation matrix, ith row is swapped with ipiv[i]
                     * row for all entries in ipiv. For long rows, swapping complete
                     * row is costly. Instead, permute permutation_buf and use that
                     * to set location of ones in the final permutation matrix.
                     */
                    void *P = calloc(m * m, sizeof(@ftyp@));
                    if (P == NULL) {
                        free(permutation_buf);
                        error_occurred = 1;
                        goto error;
                    }
                    for (l = 0; l < m; ++l) {
                        permutation_buf[l] = l;
                    }
                    for (l = 0; l < k; ++l) {
                        /* IPIV indices start with 1 instead of 0 */
                        int              t = params.IPIV[l] - 1;
                        int            tmp = permutation_buf[l];
                        permutation_buf[l] = permutation_buf[t];
                        permutation_buf[t] = tmp;
                    }
                    /*
                     * Turn the permutation_buf into a matrix.
                     */
                    for (l = 0; l < m; l++) {
                        @ftyp@ *element = (@ftyp@ *)P + m * l + permutation_buf[l];
                        *element = *(@ftyp@*)&@cblas_type@_one;
                    }

                    /* Copy P to corresponding output argument. */
                    delinearize_@TYPE@_matrix(args[arg_i++], P, &p_out);

                    /* P is copied to output, free memory. */
                    free(permutation_buf);
                    free(P);
                }
                else {
                    /* Permute rows of L using IPIV. */
                    LAPACK(@laswp@)(&k, L, &m, &one, &k, params.IPIV, &minus_one);
                }

                /* Copy L and U to corresponding output arguments. */
                delinearize_@TYPE@_matrix(args[arg_i++], L, &l_out);
                delinearize_@TYPE@_matrix(args[arg_i], U, &u_out);

                // Free temporary L and U matrices.
                free(L);
                free(U);
            }
            else {
                error_occurred = 1;
            }

        error:
            if (error_occurred) {
                int arg_i = 1;
                if (!permute) {
                    nan_@TYPE@_matrix(args[arg_i++], &p_out);
                }
                nan_@TYPE@_matrix(args[arg_i++], &l_out);
                nan_@TYPE@_matrix(args[arg_i], &u_out);
            }

            /* Move pointers to next non-core dimension */
            update_pointers((npy_uint8**)args, outer_steps, num_in_out_params);
        }

        release_getrf_func(&params);
    }

    set_fp_invalid_or_clear(error_occurred);
}

