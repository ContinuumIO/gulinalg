                       /* QR decomposition */

typedef struct geqrf_params_struct
{
    void *A;
    void *TAU;
    void *WORK;
    fortran_int M;
    fortran_int N;
    fortran_int LDA;
    fortran_int LWORK;
} GEQRF_PARAMS_t;

/**begin repeat
   #TYPE=FLOAT,DOUBLE, CFLOAT, CDOUBLE#
   #ftyp=fortran_real, fortran_doublereal,
         fortran_complex, fortran_doublecomplex#
   #fbasetyp=fortran_real, fortran_doublereal,
             fortran_real, fortran_doublereal#
   #cblas_type=s,d,c,z#
   #lapack_func=sgeqrf, dgeqrf, cgeqrf, zgeqrf#
   #orgqr=sorgqr, dorgqr, cungqr, zungqr#
 */

static inline int
init_@lapack_func@(GEQRF_PARAMS_t *params, fortran_int M, fortran_int N)
{
    /*
     * First get the optimal size of work array. geqrf calculates this by
     * passing LWORK = -1. As query is meant to get optimal work size and
     * not for actual decomposition, no need to pass matrices.
     */
    @ftyp@ work;
    fortran_int lwork = -1;
    fortran_int info;
    LAPACK(@lapack_func@)(&M, &N, NULL, &M, NULL, &work, &lwork, &info);
    if (info != 0) {
        memset(params, 0, sizeof(*params));
        return 0;
    }

    fortran_int min_m_n = M < N ? M : N;
    size_t a_size       = M * N * sizeof(@ftyp@);
    size_t tau_size     = min_m_n * sizeof(@ftyp@);
    size_t work_size    = (size_t)*(@fbasetyp@*)&work * sizeof(@ftyp@);
    npy_uint8 *mem_buff = malloc(a_size + tau_size + work_size);
    if (mem_buff == NULL) {
        return 0;
    }

    params->A     = mem_buff;
    params->TAU   = mem_buff + a_size;
    params->WORK  = mem_buff + a_size + tau_size;
    params->M     = M;
    params->N     = N;
    params->LDA   = M;
    params->LWORK = work_size;

    return 1;
}

static inline void
release_@lapack_func@(GEQRF_PARAMS_t *params)
{
    free(params->A); /* this points to the whole block */
    memset(params, 0, sizeof(*params));
}

static void
@TYPE@_qr(int enforce_m, char **args, npy_intp *dimensions, npy_intp *steps)
{
    GEQRF_PARAMS_t params;
    int error_occurred = get_fp_invalid_and_clear();
    fortran_int m, n, min_m_n, k;

    INIT_OUTER_LOOP_3
    m = (fortran_int) dimensions[0];
    n = (fortran_int) dimensions[1];

    /*
     * If m = 0, all output matrices will be empty and no need to
     * zero initialize them.
     */
    if (m == 0) {
        return;
    }

    min_m_n = m < n ? m : n;
    k = min_m_n;

    /* Expected output Q is a MxM orthogonal matrix, not MxN matrix. */
    if (enforce_m) {
        k = m;
    }

    if (init_@lapack_func@(&params, m, n))
    {
        LINEARIZE_DATA_t a_in, q_out, r_out;
        init_linearize_data(&a_in,  n, m, steps[1], steps[0]);
        init_linearize_data(&q_out, k, m, steps[3], steps[2]);
        init_linearize_data(&r_out, n, k, steps[5], steps[4]);

        BEGIN_OUTER_LOOP_3
            fortran_int info;
            linearize_@TYPE@_matrix(params.A, args[0], &a_in);
            LAPACK(@lapack_func@)(&params.M, &params.N,
                                  params.A, &params.LDA,
                                  params.TAU, params.WORK,
                                  &params.LWORK, &info);

            /*
             * Elements on and above diagonal of A now contain trapezoidal
             * matrix R while those below diagonal with array TAU form
             * orthogonal matrix Q.
             */
            if (!info)
            {
                // Using calloc as R is a trapezoidal matrix, so lower
                // triangle should be zero initialized.
                void *R = calloc(k * n, sizeof(@ftyp@));
                if (R == NULL) {
                    error_occurred = 1;
                    goto error;
                }

                // Copy the upper triangular matrix.
                int i, j;
                for (j = 0; j < k; j++) {
                    for (i = j; i < n; i++) {
                        @ftyp@ *element = (@ftyp@ *)R + k * i + j;
                        *element = *((@ftyp@ *)params.A + m * i + j);
                    }
                }

                // LAPACK creates Q matrix from A and TAU in-place. So if
                // expected Q matrix is a MxM orthogonal Matrix where M > N,
                // allocate space and copy from MxN matrix A.
                void *Q = params.A;
                void *Q_buf = NULL;
                if (k > n) {
                    Q_buf = malloc(k * k * sizeof(@ftyp@));
                    if (Q_buf == NULL) {
                        error_occurred = 1;
                        goto error;
                    }

                    Q = Q_buf;
                    for (i = 0; i < params.M * params.N; i++) {
                        *((@ftyp@ *)Q + i) = *((@ftyp@ *)params.A + i);
                    }
                }

                /*
                 * Call orgqr to get Q matrix from lower triangle of A and TAU.
                 * First get the appropriate workspace for orgqr as workspace
                 * allocated for geqrf won't work, at least for MKL version.
                 */
                @ftyp@ work;
                fortran_int lwork = -1;
                LAPACK(@orgqr@)(&params.M,
                                &k,
                                &min_m_n,
                                NULL,
                                &params.LDA,
                                NULL,
                                &work,
                                &lwork,
                                &info);

                if (info != 0) {
                    free(Q_buf);
                    free(R);
                    error_occurred = 1;
                    goto error;
                }

                lwork = *(@fbasetyp@*)&work * sizeof(@ftyp@);
                void *work_buff = malloc(lwork);
                LAPACK(@orgqr@)(&params.M,
                                &k,
                                &min_m_n,
                                Q,
                                &params.LDA,
                                params.TAU,
                                work_buff,
                                &lwork,
                                &info);

                if (info) {
                    free(Q_buf);
                    free(R);
                    free(work_buff);
                    error_occurred = 1;
                    goto error;
                }

                // Copy matrices to corresponding output arguments.
                delinearize_@TYPE@_matrix(args[1], Q, &q_out);
                delinearize_@TYPE@_matrix(args[2], R, &r_out);

                // Release Q buffer and R as they have already been
                // copied to output.
                free(Q_buf);
                free(R);
                free(work_buff);
            }
        error:
            if (error_occurred)
            {
                nan_@TYPE@_matrix(args[1], &q_out);
                nan_@TYPE@_matrix(args[2], &r_out);
            }
        END_OUTER_LOOP

        release_@lapack_func@(&params);
    }

    set_fp_invalid_or_clear(error_occurred);
}

static void
@TYPE@_qr_m(char     **args, npy_intp *dimensions,
            npy_intp *steps, void *NPY_UNUSED(func))
{
    @TYPE@_qr(1, args, dimensions, steps);
}

