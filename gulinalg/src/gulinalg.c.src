typedef struct trtrs_params_struct {
    void *A;
    void *B;
    fortran_int N;
    fortran_int LDA;
    fortran_int LDB;
} TRTRS_PARAMS_t;

/**begin repeat
   #TYPE=FLOAT,DOUBLE,CFLOAT,CDOUBLE#
   #ftyp=float,double,COMPLEX_t,DOUBLECOMPLEX_t#
   #lapack_func=strtrs,dtrtrs,ctrtrs,ztrtrs#
 */

static inline int
init_@lapack_func@(TRTRS_PARAMS_t *params,
                   fortran_int    N,
                   fortran_int    NRHS)
{
    npy_uint8 *mem_buff = NULL;
    npy_uint8 *a, *b;
    size_t a_size, b_size;

    a_size = N * N * sizeof(@ftyp@);
    b_size = N * NRHS * sizeof(@ftyp@);
    mem_buff = malloc(a_size + b_size);
    if (!mem_buff) {
        free(mem_buff);
        memset(params, 0, sizeof(*params));

        return 0;
    }

    a = mem_buff;
    b = a + a_size;

    params->A = (void*)a;
    params->B = (void*)b;
    params->N = N;
    params->LDA = N;
    params->LDB = N;

    return 1;
}

static inline void
release_@lapack_func@(TRTRS_PARAMS_t *params)
{
    free(params->A);
    memset(params,0,sizeof(*params));
    return;
}

/*
 * solve_triangular uses LAPACK _trtrs method to solve:
 *   A * X = B
 *   A.T * X = B
 *   A.H * X = B.
 * As it takes many parameters, describing them below for easier
 * understanding:
 *   ndim:  1   - Get nrhs from dimensions (matrix), 0 - Use 1 (vector)
 *   uplo:  'U' - A is upper triangular matrix. 'L' - Lower triangular.
 *   trans: 'N' - No transpose), 'T' - Transpose, 'C' - Conjugate transpose.
 *   diag:  'N' - A is non-unit triangular, 'U' - A is unit triangular.
 */
static void
@TYPE@_solve_triangular(char ndim, char uplo,
                        char trans, char diag,
                        char **args, npy_intp *dimensions,
                        npy_intp* steps)
{
    TRTRS_PARAMS_t params;
    int error_occurred = get_fp_invalid_and_clear();
    fortran_int n, nrhs;
    INIT_OUTER_LOOP_3

    n = (fortran_int)dimensions[0];
    nrhs = ndim?(fortran_int)dimensions[1]:1;

    /* output array will be empty, as one of its inner dimensions will be 0 */
    if (n == 0) {
        return;
    }

    if (init_@lapack_func@(&params, n, nrhs)) {
        LINEARIZE_DATA_t a_in, b_in, r_out;

        init_linearize_data(&a_in, n, n, steps[1], steps[0]);
        if (ndim) {
            init_linearize_data(&b_in,  nrhs, n, steps[3], steps[2]);
            init_linearize_data(&r_out, nrhs, n, steps[5], steps[4]);
        } else {
            init_linearize_data(&b_in,  1, n, 0, steps[2]);
            init_linearize_data(&r_out, 1, n, 0, steps[3]);
        }

        BEGIN_OUTER_LOOP_3
            int info;
            linearize_@TYPE@_matrix(params.A, args[0], &a_in);
            linearize_@TYPE@_matrix(params.B, args[1], &b_in);
            LAPACK(@lapack_func@)(&uplo, &trans, &diag,
                                  &params.N, &nrhs,
                                  params.A, &params.LDA,
                                  params.B, &params.LDB,
                                  &info);

            if (!info) {
                delinearize_@TYPE@_matrix(args[2], params.B, &r_out);
            } else {
                error_occurred = 1;
                nan_@TYPE@_matrix(args[2], &r_out);
            }
        END_OUTER_LOOP

        release_@lapack_func@(&params);
    }

    set_fp_invalid_or_clear(error_occurred);
}

#define SOLVE_TRIANGULAR(NDIM, UPLO, TRANS, DIAG)                \
static void                                                      \
@TYPE@_solve_triangular_ ## NDIM ## UPLO ## TRANS ##DIAG(        \
    char **args,                                                 \
    npy_intp *dimensions,                                        \
    npy_intp* steps,                                             \
    void *NPY_UNUSED(func))                                      \
{                                                                \
    @TYPE@_solve_triangular(NDIM, (#UPLO)[0], (#TRANS)[0],       \
                           (#DIAG)[0], args, dimensions, steps); \
}

